{
  "include": [
    "src/**/*.ts*",
    "*.ts*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@api/*": ["src/api/*"],
      "@common-types/*": ["src/common-types/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@redux/*": ["src/redux/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}